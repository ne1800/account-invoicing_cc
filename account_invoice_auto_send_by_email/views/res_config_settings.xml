<odoo>
    <data>
        <record
            id="res_config_settings_ignore_invoice_auto_mail_payment_state_check"
            model="ir.ui.view"
        >
            <field
                name="name"
            >res_config_settings_ignore_invoice_auto_mail_payment_state_check</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='show_sale_receipts']" position="after">
                    <div
                        class="col-xs-12 col-md-6 o_setting_box"
                        id="ignore_invoice_auto_mail_payment_state_check"
                    >
                        <div class="o_setting_left_pane">
                            <field
                                name="ignore_invoice_auto_mail_payment_state_check"
                            />
                        </div>
                        <div
                            class="o_setting_right_pane"
                            name="ignore_invoice_auto_mail_payment_state_check_pane"
                        >
                            <label for="ignore_invoice_auto_mail_payment_state_check" />
                            <div
                                class="text-muted"
                            >Ignore Invoice Auto Mail Payment State Check</div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
